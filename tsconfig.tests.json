{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "build/tests",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node", "vite/client"],
    "noEmit": false
  },
  "include": ["src/lib/**/*.ts", "tests/**/*.ts"]
}
